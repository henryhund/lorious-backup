%p#notice= notice



-if @display != "none"
  %h2 Manage Your Bank Account
  %p.strong Bank Account
  .card-container
    %span.type= @bank_account_type
    %span.name= @bank_account_name
    %span.number= @bank_account_number
    %span.options-edit= link_to 'Edit', edit_recipient_path(current_user)
    %span.options-delete= link_to 'Destroy', @recipient, :method => :delete, :data => { :confirm => 'Are you sure?' }
-else
  %h2 Please Add Your Bank Account
  %br
  =link_to "Add Bank Account", new_recipient_path
  %br

