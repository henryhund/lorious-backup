= simple_form_for(@profile) do |f|
  = f.error_notification
  .form-inputs
    =# f.input :user_id
    =# f.input :fname
    =# f.input :lname
    =# f.input :email
    = f.input :tagline
    = f.input :bio, :input_html => { :rows => 5 }
    = f.input :availability
    = f.input :display_name
    = f.input :expertise
    =# f.input :interest
    = f.input :expertise_hourly, collection: (20..100).step(5).map { |d| [ "$#{d.to_s}", d ] }
    =# f.input :expertise_hourly, collection: (20..100).step(5), input_html: {class: "dollars"}
    =# f.input :interest_hourly, :as => :string
  .form-actions
    = f.button :submit
