


%section.row-fluid.sign-up
  .container-fluid
    .span6.landing-left
      %h1 Sign In!
      .form-inputs
        = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
          = f.input :login, :autofocus => true, placeholder: "Your Username or Email", label: false
          = f.input :password, placeholder: "Your Password", label: false
          =# f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
          = f.button :submit, "Sign in", :class => 'btn button'
      %p
        %br
        = render "devise/shared/links"